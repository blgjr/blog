<h1>Редактирование постов</h1>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>

	<% if @post.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@post.errors.count, "Error") %> эту статью нельзя запостить:
			</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>


	<p>
		<%= f.label :title, 'Заголовок' %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text, 'Текст' %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit :'Запостить' %>
	</p>
<% end %>

<%= link_to 'Назад', posts_path %>